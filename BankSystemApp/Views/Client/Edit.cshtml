@model Client
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Client</h2>

            </div>
        </div>
    </div>

 <div class="card-body p-4">
<form method="post" class="row p-4">
    <div class="border p-3 mt-4">
    

        <input asp-for="ClientId" hidden />

                <div class="form-floating py-2 col-12">
                    <input asp-for="IdCardClient" class="form-control border-0 shadow" />
                    <label class="p-0" asp-for="IdCardClient" class="ms-2"></label>
                    <span asp-validation-for="IdCardClient" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow" />
                    <label class="p-0" asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Surname" class="form-control border-0 shadow" />
                    <label class="p-0" asp-for="Surname" class="ms-2"></label>
                    <span asp-validation-for="Surname" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Address" class="form-control border-0 shadow" />
                    <label class="p-0" asp-for="Address" class="ms-2"></label>
                    <span asp-validation-for="Address" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="PhoneNumber" class="form-control border-0 shadow" />
                    <label class="p-0" asp-for="PhoneNumber" class="ms-2"></label>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Email" class="form-control border-0 shadow" />
                    <label class="p-0" asp-for="Email" class="ms-2"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>

          <div class="row pt-2">
            <div class="col-6 col-md-3">
                 <button type ="submit" class="btn btn-primary form-control">Edit</button>
            </div>

            <div class="col-6 col-md-3">
                <a asp-controller="Client" asp-action="Index" class="btn btn-outline-primary  form-control">Back</a>
            </div>
        </div>
    </div>

</form>
</div>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
