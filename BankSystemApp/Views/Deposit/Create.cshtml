@model Deposit

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">

            <h2 class="text-primary">Create Current Account</h2>
            <hr/>
        </div>
        <div class="mb-3 row">
            <label class="p-0" asp-for="AccountId"></label>
            <select asp-for="AccountId" asp-items="ViewBag.CurrentAccountsList" class="form-select form-control">
                <option disabled selected > -- Select account number -- </option>
            </select>
            <span asp-validation-for="AccountId" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label class="p-0" asp-for="Amount"></label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        

        <div class="row">
            <div class="col-6 col-md-3">
                 <button type ="submit" class="btn btn-primary form-control">Create</button>
            </div>

            <div class="col-6 col-md-3">
                <a asp-controller="Deposit" asp-action="Index" class="btn btn-outline-secondary  form-control">Back</a>
            </div>
        </div>
    </div>
    
</form>

@section Scripts {
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}
