@model CurrentAccount

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">

            <h2 class="text-primary">Delete Current account</h2>
            <hr />
        </div>
        <div class="mb-3 row">
            <label class="p-0" asp-for="ClientId"></label>
            <input asp-for="ClientId" class="form-control" disabled />
        </div>
        <div class="mb-3 row">
            <label class="p-0" asp-for="Valuta"></label>
            <input asp-for="Valuta" class="form-control" disabled />
        </div>
        

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>

            <div class="col-6 col-md-3">
                <a asp-controller="CurrentAccount" asp-action="Index" class="btn btn-outline-secondary  form-control">Back</a>
            </div>
        </div>
    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
