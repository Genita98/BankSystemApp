@model Deposit

<partial name="_Notifications" />


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Make a Withdrawal</h2>
            </div>
        </div>
    </div>

    <form method="post" class="row p-4">
        <div class="border p-3">

          <div class="form-floating py-2 col-12">
            <select asp-for="AccountId" asp-items="ViewBag.CurrentAccountsList" class="form-select form-control shadow border-0">
                <option disabled selected > -- Select account number -- </option>
            </select>
            <label class="p-0 ms-2" asp-for="AccountId"></label>
            <span asp-validation-for="AccountId" class="text-danger"></span>
        </div>
            <div class="form-floating py-2 col-12">
            <input asp-for="Amount" class="form-control shadow border-0" />
            <label class="p-0 ms-2" asp-for="Amount"></label>
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        

        <div class="row">
            <div class="col-6 col-md-3">
                 <button type ="submit" class="btn btn-primary form-control">Create</button>
            </div>

            <div class="col-6 col-md-3">
                <a asp-controller="Deposit" asp-action="Index" class="btn btn-outline-primary  form-control">Back</a>
            </div>
        </div>
    </div>
    
</form>
</div>
@section Scripts {
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}
